
@{
    ViewBag.Title = Resource.Posts;
}

<h2>@ViewBag.Title</h2>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<div class="container">
    <div class="row">
        <button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#exampleModal">
            @Resource.EarnPointsInstagramPosts
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="cards">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="mr-auto">
                            <h4 class="text-success">@Resource.Points: <span id="points" class="text-success">0</span></h4>
                        </div>
                        <input id="refresh" value="@Resource.Refresh" type="button" class="btn btn-outline-success float-right" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resource.Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script async defer src="//www.instagram.com/embed.js"></script>
<script src="~/Scripts/InstagramPosts.js"></script>