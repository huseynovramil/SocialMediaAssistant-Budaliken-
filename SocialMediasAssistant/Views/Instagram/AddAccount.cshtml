@model SocialMediasAssistant.Models.InstagramAccount
@{
    ViewBag.Title = Resource.AddAccount;
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>@Resource.AddAccount</h4>
        <hr />
        @Html.ValidationSummary(false, null, new { @class = "text-danger" })
        <div class="form-group">
            <label for="points" class="control-label col-md-2">@Resource.Points</label>
            <div class="col-md-10">
                <div id="points" class="dropdown">
                    <button name="Points" class="btn btn-outline-secondary dropdown-toggle"
                            type="button" id="pointsSelected" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        @{
                            if (Model == null)
                            {
                                @:@Resource.Points
                            }
                            else if (Model.Points == 0)
                            {
                                @:@Resource.Points
                            }
                            else
                            {
                                @Model.Points
                            }
                        }
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#" data-value="0">5</a>
                        <a class="dropdown-item" href="#" data-value="1">10</a>
                        <a class="dropdown-item" href="#" data-value="2">20</a>
                        <a class="dropdown-item" href="#" data-value="3">50</a>
                        <a class="dropdown-item" href="#" data-value="4">100</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="addAccount" type="submit" disabled class="btn btn-primary" value="@Resource.AddAccountConfirm" />
            </div>
        </div>
        <input type="hidden" value="@ViewBag.Link" name="Link" />
        @Html.HiddenFor(a => a.Points, new { id = "account_points" })

    </div>
}
@section scripts{
    <script src="~/Scripts/AddInstagramAccount.js"></script>
}

